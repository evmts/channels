{
  "$id": "schemas/events/objective-cranked.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "objective-cranked@v1",
  "description": "Emitted when objective Crank() method is executed",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "objective_id", "side_effects_count"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "objective_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "side_effects_count": {
      "type": "integer",
      "minimum": 0,
      "description": "Number of side effects generated"
    },
    "waiting": {
      "type": "boolean",
      "description": "Whether objective is waiting for external input"
    }
  }
}
