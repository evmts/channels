{
  "$id": "schemas/events/objective-created.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "objective-created@v1",
  "description": "Emitted when a new objective is spawned in the engine",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "objective_id", "objective_type"],
  "properties": {
    "event_version": {
      "const": 1,
      "description": "Event schema version"
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp in milliseconds"
    },
    "objective_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Unique objective identifier (32 bytes hex)"
    },
    "objective_type": {
      "type": "string",
      "enum": ["DirectFund", "DirectDefund", "VirtualFund", "VirtualDefund"],
      "description": "Type of objective being created"
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Associated channel ID (32 bytes hex)"
    },
    "participants": {
      "type": "array",
      "items": {
        "type": "string",
        "pattern": "^0x[0-9a-fA-F]{40}$"
      },
      "minItems": 2,
      "maxItems": 255,
      "description": "Ordered list of participant addresses"
    }
  }
}
