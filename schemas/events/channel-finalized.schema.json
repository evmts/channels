{
  "$id": "schemas/events/channel-finalized.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "channel-finalized@v1",
  "description": "Emitted when off-chain final agreement reached (all parties signed isFinal=true)",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "final_turn", "final_state_hash"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "final_turn": {
      "type": "integer",
      "minimum": 0,
      "description": "Turn number of final state"
    },
    "final_state_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Hash of final state agreed by all parties"
    }
  }
}
