{
  "$id": "schemas/events/withdraw-completed.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "withdraw-completed@v1",
  "description": "Emitted when funds withdrawn to L1 after channel conclusion",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "block_num", "tx_index", "recipient", "asset", "amount"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "block_num": {
      "type": "integer",
      "minimum": 0
    },
    "tx_index": {
      "type": "integer",
      "minimum": 0
    },
    "tx_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "recipient": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$",
      "description": "Address receiving withdrawn funds"
    },
    "asset": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    },
    "amount": {
      "type": "string",
      "pattern": "^[0-9]+$",
      "description": "Amount withdrawn (decimal string)"
    }
  }
}
