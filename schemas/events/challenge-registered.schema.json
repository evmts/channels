{
  "$id": "schemas/events/challenge-registered.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "challenge-registered@v1",
  "description": "Emitted when challenge is registered on-chain via ForceMove",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "block_num", "tx_index", "turn_num_record", "finalization_time", "challenger"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "block_num": {
      "type": "integer",
      "minimum": 0
    },
    "tx_index": {
      "type": "integer",
      "minimum": 0
    },
    "tx_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "turn_num_record": {
      "type": "integer",
      "minimum": 0,
      "description": "Turn number of challenged state"
    },
    "finalization_time": {
      "type": "integer",
      "minimum": 0,
      "description": "Unix timestamp when challenge expires"
    },
    "challenger": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$",
      "description": "Address that registered challenge"
    },
    "is_final": {
      "type": "boolean",
      "description": "Whether challenged state is final"
    },
    "candidate_state_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Hash of candidate state being challenged"
    }
  }
}
