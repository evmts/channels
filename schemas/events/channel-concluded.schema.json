{
  "$id": "schemas/events/channel-concluded.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "channel-concluded@v1",
  "description": "Emitted when channel is concluded on-chain",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "block_num", "tx_index"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "block_num": {
      "type": "integer",
      "minimum": 0
    },
    "tx_index": {
      "type": "integer",
      "minimum": 0
    },
    "tx_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "finalized_at_turn": {
      "type": "integer",
      "minimum": 0,
      "description": "Final turn number recorded on-chain"
    }
  }
}
