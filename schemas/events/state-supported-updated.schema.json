{
  "$id": "schemas/events/state-supported-updated.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "state-supported-updated@v1",
  "description": "Emitted when latest supported turn advances (sufficient signatures collected)",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "supported_turn", "state_hash"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "supported_turn": {
      "type": "integer",
      "minimum": 0,
      "description": "New supported turn number"
    },
    "state_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Hash of newly supported state"
    },
    "num_signatures": {
      "type": "integer",
      "minimum": 1,
      "description": "Number of signatures collected"
    },
    "prev_supported_turn": {
      "type": "integer",
      "minimum": 0,
      "description": "Previous supported turn number"
    }
  }
}
