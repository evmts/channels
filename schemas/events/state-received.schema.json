{
  "$id": "schemas/events/state-received.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "state-received@v1",
  "description": "Emitted when remote party's signed state is received and validated",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "turn_num", "state_hash", "signer", "signature"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "turn_num": {
      "type": "integer",
      "minimum": 0
    },
    "state_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "signer": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$"
    },
    "signature": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{130}$"
    },
    "is_final": {
      "type": "boolean"
    },
    "peer_id": {
      "type": "string",
      "description": "Network identifier of peer who sent this"
    }
  }
}
