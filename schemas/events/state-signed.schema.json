{
  "$id": "schemas/events/state-signed.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "state-signed@v1",
  "description": "Emitted when local party signs a state update",
  "type": "object",
  "required": ["event_version", "timestamp_ms", "channel_id", "turn_num", "state_hash", "signer", "signature"],
  "properties": {
    "event_version": {
      "const": 1
    },
    "timestamp_ms": {
      "type": "integer",
      "minimum": 0
    },
    "channel_id": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$"
    },
    "turn_num": {
      "type": "integer",
      "minimum": 0,
      "description": "Sequential turn number"
    },
    "state_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Keccak256 hash of full state"
    },
    "signer": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{40}$",
      "description": "Address that signed this state"
    },
    "signature": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{130}$",
      "description": "ECDSA signature (65 bytes hex)"
    },
    "is_final": {
      "type": "boolean",
      "description": "Whether this is a final state"
    },
    "app_data_hash": {
      "type": "string",
      "pattern": "^0x[0-9a-fA-F]{64}$",
      "description": "Hash of application-specific data"
    }
  }
}
